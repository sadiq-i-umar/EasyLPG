<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cart_item_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/constraintLayout"
    android:layout_marginVertical="10dp"
    app:cardElevation="5dp"
    app:contentPadding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/cart_image_1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/shopping" />

        <TextView
            android:id="@+id/cart_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/cart_image_1"
            android:text="12.5kg LPG Cylinder"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cart_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cart_item_name"
            android:layout_toEndOf="@id/cart_image_1"
            android:text="₦9,000.00"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/addbutton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/cart_item_price"
            android:layout_marginTop="2.5dp"
            android:layout_toEndOf="@id/cart_image_1"
            android:src="@drawable/ic_baseline_add_circle_24" />

        <TextView
            android:id="@+id/qty"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/cart_item_price"
            android:layout_toEndOf="@id/addbutton"
            android:gravity="center"
            android:text="1"
            android:textStyle="bold"
            android:textSize="25dp" />

        <ImageView
            android:id="@+id/remove_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/cart_item_price"
            android:layout_marginTop="2.5dp"
            android:layout_toEndOf="@id/qty"
            android:src="@drawable/ic_baseline_remove_circle_24" />

        <TextView
            android:id="@+id/totaltextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Total"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/totalpricecartitem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/totaltextview"
            android:layout_alignParentRight="true"
            android:text="₦9,000.00"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!--<ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="1dp"
            android:layout_below="@id/totalpricecartitem"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_baseline_delete_outline_24"/>-->

        <TextView
            android:id = "@+id/removeItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove"
            android:layout_centerVertical="true"
            android:layout_below="@id/totalpricecartitem"
            android:layout_marginTop="3dp"
            android:layout_alignParentRight="true"
            android:textColor="#F44336"
            android:drawableLeft="@drawable/ic_baseline_delete_outline_24"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>